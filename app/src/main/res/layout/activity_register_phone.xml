<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/registerToolbar"
        layout="@layout/toolbar_register" />

    <EditText
        android:id="@+id/etCountryCode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/registerToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="63dp"
        android:layout_toLeftOf="@+id/etphonenumber"
        android:background="#e4e4e4"
        android:enabled="false"
        android:hint="+91"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etphonenumber"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bRegistrationBtn"
        android:layout_alignStart="@+id/bRegistrationBtn"
        android:layout_alignTop="@+id/etCountryCode"
        android:background="#e4e4e4"
        android:hint="Phone Number"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="#000" />

    <Button
        android:id="@+id/bRegistrationBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttons"
        android:text="Register"
        android:textColor="@color/white" />

</RelativeLayout>