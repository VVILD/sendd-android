<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dialog_homeicon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Current Pickup Address"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="25, T2 B/15, Jogeshwari Vikroli Link Road IIT Area, Powai, 400076"
        android:textColor="@color/blue"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/bChange"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="51"
            android:background="@drawable/buttons_dialog"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/dialog_editicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:background="#0000"
                android:clickable="false"
                android:text="Edit"
                android:textColor="@color/blue"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bCancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="50"
            android:background="@drawable/buttons_dialog"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivButtonconfirm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/dialog_crossicon" />

            <TextView
                android:id="@+id/tvButtonconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:background="#0000"
                android:clickable="false"
                android:text="Cancel"
                android:textColor="@color/blue"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>