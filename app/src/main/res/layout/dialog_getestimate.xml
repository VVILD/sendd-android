<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl111"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv111"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_weight="80"
            android:gravity="center_vertical"
            android:text="Height:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etHeight"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tv111"
            android:layout_weight="20"
            android:background="@color/grey"
            android:hint="in cm"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl222"

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/rl111"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv222"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_weight="80"
            android:gravity="center_vertical"
            android:text="Length:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etLength"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tv222"
            android:layout_weight="20"
            android:background="@color/grey"
            android:hint="in cm"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rl333"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/rl222"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv333"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_weight="80"
            android:gravity="center_vertical"
            android:text="Width:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etWidth"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tv333"
            android:layout_weight="20"
            android:background="@color/grey"
            android:hint="in cm"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rl444"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/rl333"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv444"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_weight="80"
            android:gravity="center_vertical"
            android:text="Weight:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tv444"
            android:layout_weight="20"
            android:background="@color/grey"
            android:hint="in kgs"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <Button

        android:id="@+id/bEstimate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rl444"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttons"
        android:text="Get Estimate"
        android:textColor="@color/white" />

</RelativeLayout></ScrollView>