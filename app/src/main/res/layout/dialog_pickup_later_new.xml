<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dialog_pickuplater" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Schedule Your PickUp"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl11111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioToday"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_buttonselector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="Today"
                android:textColor="@drawable/radio_buttontextselector" />

            <RadioButton
                android:id="@+id/radioTomorrow"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_buttonselector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tomorrow"
                android:textColor="@drawable/radio_buttontextselector" />

            <RadioButton
                android:id="@+id/radioDayAfter"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radio_buttonselector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="Day After"
                android:textColor="@drawable/radio_buttontextselector" />
        </RadioGroup>


        <NumberPicker

            android:id="@+id/timeslots"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/radioGroup1" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl11111"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="100">


            <LinearLayout
                android:id="@+id/Cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="50"
                android:background="@drawable/buttons_dialog"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivButtonconfirm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#0000"
                    android:clickable="false"
                    android:src="@drawable/dialog_crossicon" />

                <TextView
                    android:id="@+id/tvButtonconfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:background="#0000"
                    android:clickable="false"
                    android:text="Cancel"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Submit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="51"
                android:background="@drawable/buttons_dialog"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#0000"
                    android:clickable="false"
                    android:src="@drawable/dialog_righticon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:background="#0000"
                    android:clickable="false"
                    android:text="Submit"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>