<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/ivlogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignLeft="@+id/tvLoginPgNotRegistered"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tvLoginPgNotRegistered"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivlogo"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"

                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <RelativeLayout
                    android:id="@+id/rlSignupPgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/ivSignupPgName"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/user_icon" />

                    <EditText
                        android:id="@+id/etSignupPgName"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/ivSignupPgName"
                        android:layout_toRightOf="@+id/ivSignupPgName"
                        android:hint="Name"
                        android:inputType="textCapWords" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlSignupPgEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlSignupPgName"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/ivSignupPgEmail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/mail_icon_small" />

                    <EditText
                        android:id="@+id/etSignupPgEmail"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"

                        android:layout_toEndOf="@+id/ivSignupPgEmail"
                        android:layout_toRightOf="@+id/ivSignupPgEmail"
                        android:hint="Email"
                        android:inputType="textEmailAddress" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlSignupPgPhoneNumber"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlSignupPgEmail"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/ivSignupPgPhoneNumber"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/phone_icon" />

                    <EditText
                        android:id="@+id/etSignupPgPhoneNumber"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/ivSignupPgPhoneNumber"
                        android:layout_toRightOf="@+id/ivSignupPgPhoneNumber"
                        android:hint="Phone Number"
                        android:inputType="phone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlSignupPgPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlSignupPgPhoneNumber"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivSignupPgPassword"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/password_icon" />

                    <EditText
                        android:id="@+id/etSignupPgPassword"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/ivSignupPgPassword"
                        android:layout_toRightOf="@+id/ivSignupPgPassword"
                        android:hint="Password"
                        android:inputType="textPassword" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/terms_and_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlSignupPgPassword"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/terms_and_condition"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/bSignupPgSignup"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/terms_and_condition"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttons"
                    android:text="Sign up"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvRegistered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bSignupPgSignup"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Already registered?"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/bSignupPgLogin"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tvRegistered"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttons"
                    android:text="Login"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
