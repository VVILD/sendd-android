<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@color/blue"
    android:padding="5dp">


    <ImageView
        android:id="@+id/drawer_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/user_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title_first_nav_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/drawer_profile_image"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/drawer_profile_image"
        android:layout_toRightOf="@+id/drawer_profile_image"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/settings_first_nav_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Edit profile info"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/drawer_profile_image"
        android:layout_alignLeft="@+id/title_first_nav_item"
        android:layout_alignStart="@+id/title_first_nav_item" />

</RelativeLayout>