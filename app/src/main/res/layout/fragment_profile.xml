<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlFragment_Profile_Image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/ivFragment_Profile_Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user_icon" />

        <TextView
            android:id="@+id/tvFragment_Profile_Title_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivFragment_Profile_Image"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize18" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlFragment_Profile_Image">

        <RelativeLayout
            android:id="@+id/rllw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <RelativeLayout
                android:id="@+id/rlFragment_Profile_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/ivFragment_Profile_Name_Image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_icon" />

                <EditText
                    android:id="@+id/etFragment_Profile_Name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivFragment_Profile_Name_Image"
                    android:layout_toRightOf="@+id/ivFragment_Profile_Name_Image"
                    android:enabled="false"
                    android:hint="Name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlFragment_Profile_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlFragment_Profile_Name"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/ivFragment_Profile_Email_Image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mail_icon" />

                <EditText
                    android:id="@+id/etFragment_Profile_Email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivFragment_Profile_Email_Image"
                    android:layout_toRightOf="@+id/ivFragment_Profile_Email_Image"
                    android:enabled="false"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlFragment_Profile_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlFragment_Profile_Email"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/ivFragment_Profile_Phone_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/phone_icon" />

                <EditText
                    android:id="@+id/etFragment_Profile_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivFragment_Profile_Phone_image"
                    android:layout_toRightOf="@+id/ivFragment_Profile_Phone_image"
                    android:enabled="false"
                    android:hint="Phone"
                    android:inputType="phone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/rlFragment_Profile_Phone"
                android:weightSum="100">

                <Button
                    android:id="@+id/UpdateProfile"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="50"
                    android:background="@drawable/buttons"
                    android:text="Edit Profile"

                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/bFragment_Profile_Logout"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="50"
                    android:background="@drawable/buttons"
                    android:text="Logout"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>